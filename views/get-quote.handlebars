<h1>{{quoteData.volumeInfo.title}}</h1>

<p>Author: {{quoteData.volumeInfo.authors}}</p>
<div class="image">
    <img src="{{quoteData.volumeInfo.imageLinks.smallThumbnail}}">
</div>
<p>Summary: {{quoteData.volumeInfo.description}}</p>
<p>Page Count: {{quoteData.volumeInfo.pageCount}}</p>
<p>Rating: {{quoteData.volumeInfo.averageRating}}/5</p>
<a href="{{quoteData.volumeInfo.previewLink}}">Preview the book!</a>


<div class="text-center">
    <h3>Comments</h3>
    {{#each comments as |comment| }}
    <div>
        <p>{{comment.comment_body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
</div>
<div class="text-center mx-auto col-lg-10 col-md-8 col-sm-7">
    <form id="comment-form">
        <label for="comment-form"><strong>COMMENT</strong></label>
        <div class="form-group">
            <textarea class="form-control" id="comment" rows="3"></textarea>
            <div class="mt-2">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </div>
    </form>
</div>

<script src="/js/comments.js"></script>