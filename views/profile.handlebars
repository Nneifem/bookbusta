<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Saved Books:</h3>

    {{!-- Search bar for saved books --}}
    <div class="row">
      <form id="pf-search-form">
        <div class="input-group">
          <div class="form-outline">
            <input type="text" id="pf-search" class="form-control"/>
            <label class="form-label" for="search">Search...</label>
          </div>
          <button type="button" class="btn btn-primary">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </form>
      <ul>
        {{!-- Placeholder for search results --}}
      </ul>
    </div>

    {{#if books.length}}
    <div class="book-list">
      {{!-- Placeholder for listed booktitles and images --}}
      {{#each books as |book|}}
      <div class="row mb-2">
        <h4><a href="book/{{book.bookLink}}">{{book.bookName}}</a></h4>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="./js/profile.js"></script>